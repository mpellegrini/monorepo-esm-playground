{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./lib/**", "./dist/**", "./.svelte-kit/**"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": [],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    }
  }
}
